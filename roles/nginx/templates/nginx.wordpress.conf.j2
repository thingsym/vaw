#
# The default server
#
server {
    listen       80 default_server;
    root         {{ DOCUMENT_ROOT }};
    server_name  {{ HOSTNAME }};
    index        index.php index.html index.htm;
    charset      utf-8;
    client_max_body_size   128M;

    access_log  /var/log/nginx/{{ HOSTNAME }}.access.log main;
    error_log   /var/log/nginx/{{ HOSTNAME }}.error.log;

    location / {
        try_files $uri $uri/ {{ wp_site_path }}/index.php?$args;
    }

    error_page  404              /404.html;
    location = /404.html {
        root   /usr/share/nginx/html;
    }

    # redirect server error pages to the static page /50x.html
    #
    error_page  500 502 503 504   /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location ~ \.php$ {
        #root           {{ DOCUMENT_ROOT }};
{% if fastcgi == "php-fpm" %}
        fastcgi_pass    unix:/var/run/php-fpm/php-fcgi.pid;
{% endif %}
        fastcgi_index   index.php;
        fastcgi_param   SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include         fastcgi_params;
    }

    location = /robots.txt { access_log off; log_not_found off; }
    location ~ /\. { deny  all; access_log off; log_not_found off; }
}


{% if ssl %}
server {
    listen       443 ssl http2;
    root         {{ DOCUMENT_ROOT }};
    server_name  {{ HOSTNAME }};
    index        index.php index.html index.htm;
    charset      utf-8;
    client_max_body_size   128M;

    access_log  /var/log/nginx/{{ HOSTNAME }}.access.log main;
    error_log   /var/log/nginx/{{ HOSTNAME }}.error.log;

    ssl on;
    ssl_certificate       /etc/mkcert/cert.pem;
    ssl_certificate_key   /etc/mkcert/privkey.pem;

    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  5m;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers AESGCM:HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers  on;

    location / {
        try_files $uri $uri/ {{ wp_site_path }}/index.php?$args;
    }

    error_page  404              /404.html;
    location = /404.html {
        root   /usr/share/nginx/html;
    }

    # redirect server error pages to the static page /50x.html
    #
    error_page  500 502 503 504   /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location ~ /wp-(admin.*\.php|login\.php)$ {
{% if fastcgi == "php-fpm" %}
        fastcgi_pass    unix:/var/run/php-fpm/php-fcgi.pid;
{% endif %}
        fastcgi_index   index.php;
        fastcgi_param   SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        include         fastcgi_params;
        fastcgi_param   HTTPS on;
    }

    location ~ \.php$ {
        #root           {{ DOCUMENT_ROOT }};
{% if fastcgi == "php-fpm" %}
        fastcgi_pass    unix:/var/run/php-fpm/php-fcgi.pid;
{% endif %}
        fastcgi_index   index.php;
        fastcgi_param   SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include         fastcgi_params;
    }

    location = /robots.txt { access_log off; log_not_found off; }
    location ~ /\. { deny  all; access_log off; log_not_found off; }
}
{% endif %}
